pragma solidity >=0.5.0;

import "../../GSN/Context.sol";
import "../Roles.sol";

contract AdminRole is Context {
    using Roles for Roles.Role;

    event MinterAdded(address indexed account, string indexed role);
    event MinterRemoved(address indexed account);

    Roles.Role private _admins;

    string constant _role = 'Администратор';

    modifier onlyAdmin() {
        require(isAdmin(_msgSender()), "AdminRole: caller does not have the Admin role");
        _;
    }

    function isAdmin(address account) public view returns (bool) {
        return _admins.has(account);
    }

    function addAdmin(address account) public onlyAdmin {
        _addAdmin(account, _role);
    }

    function renounceAdmin() public {
        _removeAdmin(_msgSender());
    }

    function _addAdmin(address account, string memory _role) internal {
        _admins.add(account, _role);
        emit AdminAdded(account, _role);
    }

    function _removeAdmin(address account) internal {
        _admins.remove(account);
        emit AdminRemoved(account);
    }
}
